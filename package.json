{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "build": "npm run build:css && cross-env NODE_ENV=production remix build",
    "build:css": "tailwindcss -o ./app/tailwind.css",
    "dev": "cross-env NODE_ENV=development concurrently \"npm run dev:css\" \"npm run dev:remix\" \"npm run dev:wrangler\"",
    "dev:remix": "remix watch",
    "dev:css": "tailwindcss -o ./app/tailwind.css --watch",
    "dev:wrangler": "wrangler pages dev ./public --watch ./build",
    "postinstall": "remix setup cloudflare-pages",
    "start": "npm run dev:wrangler"
  },
  "dependencies": {
    "@remix-run/react": "^1.1.1",
    "autoprefixer": "^10.4.2",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.1",
    "@remix-run/cloudflare-pages": "^1.1.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.1",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "concurrently": "^7.0.0",
    "@cloudflare/workers-types": "^3.2.0",
    "cross-env": "^7.0.3",
    "esbuild": "0.13.14",
    "npm-run-all": "^4.1.5",
    "wrangler": "alpha",
    "postcss": "^8.4.5",
    "tailwindcss": "^3.0.15",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "main": "dist/worker.js"
}
